- categories_options = []
- @categories.each do |category|
  - categories_options << [category.title, category.id]

%h1 Create New Product

= simple_form_for @product do |f|
  = f.input :title
  = f.input :price
  = f.input :description
  = f.input :category_id, collection: categories_options
  = f.button :submit
